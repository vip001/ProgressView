<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vip001.progressview.sample.MainActivity">

    <com.vip001.progressview.view.FlickerSingleProgressView
        android:layout_marginTop="30dp"
        android:id="@+id/singleView"
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/singleEffectControl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加速" />

        <Button
            android:id="@+id/singleProgressControl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂停" />
    </LinearLayout>

    <com.vip001.progressview.view.FlickerSectionProgressView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:id="@+id/sectionView"
        android:layout_height="8dp" />
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sectionEffectControl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加速" />

        <Button
            android:id="@+id/sectionProgressControl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂停" />
    </LinearLayout>
</LinearLayout>
